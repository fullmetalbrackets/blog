---
import BaseLayout from "@layouts/BaseLayout.astro";
import Calendar from "@icons/calendar.svg";
import BackToTop from "@components/BackToTop.astro";
import { Image } from 'astro:assets';
import Link from "@components/Link.astro";

const title = "TV Shows - Older"
const desc = "A history of TV shows watched in my household on Plex in 2024 and 2025."

let plexData;
let error: string | null = null;

try {
  plexData = await import('../../../data/older-watched_tvshows.json');
} catch (e) {
  error = 'Something went wrong! No Plex data available.';
}

const historyItems = plexData?.response?.data?.data || [];
const lastUpdated = plexData?.lastUpdated;
const totalItems = plexData?.totalItems || historyItems.length;

const images = import.meta.glob('../../../data/_images/*.{jpg,jpeg,png,webp,avif}');

async function getImage(posterPath: string) {
  if (!posterPath) return null;
  
  // Log for debugging
  console.log('Looking for:', posterPath);
  
  // Try direct match first
  if (images[posterPath]) {
    return await images[posterPath]();
  }
  
  // Try with relative path prefix
  const withPrefix = `../../../data/_images/${posterPath}`;
  if (images[withPrefix]) {
    return await images[withPrefix]();
  }
  
  // Try just the filename
  const filename = posterPath.split('/').pop();
  const withFilename = `../../../data/_images/${filename}`;
  if (images[withFilename]) {
    return await images[withFilename]();
  }
  
  console.warn('Image not found:', posterPath);
  return null;
}

const itemsWithImages = await Promise.all(
  historyItems.map(async (item) => ({
    ...item,
    imageModule: item.poster ? await getImage(item.poster) : null
  }))
);

function formatDate(timestamp) {
  return new Date(timestamp * 1000).toLocaleDateString('en-US', {
    month: '2-digit',
    day: '2-digit',
    year: 'numeric'
  });
}
---

<style scoped>
  section {
    margin-bottom: 2em;
  }
  
  @media screen and (max-width: 667px) {
    section {
      font-size: 0.925em;
      margin-bottom: 1em;
      line-height: 1.2;
    }
  }

  h1 {
    font-family: var(--sub-font);
    font-weight: 900;
    margin: 0;
    padding: 0;
  }

  .plex-header {
    margin-bottom: 2rem;
  }

  .info {
    font-family: var(--sub-font);
    font-size: 0.85em;
  }

  .last-updated {
    color: var(--primary);
    font-family: var(--sub-font);
    font-weight: 700;
  }

  .stats span {
    color: var(--emphasis);
    font-weight: 700;
  }

  .error {
    padding: 1.5rem;
    background: #fee;
    border: 1px solid #fcc;
    border-radius: 8px;
    color: #c00;
  }

  .poster-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, auto));
    gap: 1em 0;
    padding: 0;
    margin: 0;
  }

  .poster-card {
    transition: transform 0.2s;
    margin: 0 auto;
    padding: 0;
  }

  .poster-card:hover {
    transform: translateY(-4px);
  }

  .poster-card img {
    width: 100%;
    height: auto;
    display: block;
    padding: 0;
    margin: 0 auto;
  }

  .watch-date {
    display: flex;
    place-items: center;
    background: var(--blockquote);
    color: var(--primary);
    font-family: var(--sub-font);
    font-size: 0.75em;
    font-weight: 700;
    border-radius: 0;
    margin: 0 1.15em;
    padding: 0.25em;
  }
  .watch-date svg {
    filter: var(--time-svg);
    margin-right: 0.25em;
  }

  @media screen and (max-width: 667px) {
    .poster-grid {
      grid-template-columns: repeat(auto-fill, minmax(155px, 1fr));
      gap: 1rem;
    }

    .poster-placeholder {
      font-size: 2rem;
    }

    .watch-date {
      font-size: 0.7rem;
      padding: 0.3rem 0.5rem;
    }
  }
</style>

<BaseLayout title={title} description={desc}>
  <section>
    <h1>{title}</h1>
    <hr>
    <p>
      {desc}
    </p>
    <p>
      See <a href="/digest/older/movies/">movies seen during this time period</a>, or see <a href="/digest/">Digest</a> for the latest media (including video games) that I have consumed.
    </p>
    <p>
      <span class="primary b sub-font">21</span> shows watched in <span class="primary b sub-font">2025</span><br>
      <span class="primary b sub-font">5</span> shows watched in <span class="primary b sub-font">2024</span>
    </p>
    <div class="plex-header">
      {lastUpdated && (
        <p class="info">
          <span class="stats"><span>{totalItems}</span> shows watched. </span>Last updated: <span class=" last-updated">{new Date(lastUpdated).toLocaleDateString('en-US', {
            month: 'long',
            day: 'numeric',
            year: 'numeric',
          })}</span>
        </p>
      )}
    </div>

    {error ? (
      <div class="error">
        <p>{error}</p>
      </div>
    ) : (
      <div class="poster-grid">
        {itemsWithImages.map((item) => (
          <div class="poster-card">
            {item.imageModule ? (
              <Image 
                src={item.imageModule.default}
                alt={item.title}
                width={300}
                height={450}
                loading="lazy"
                quality={80}
              />
            ) : (
              <div class="poster-placeholder">ðŸ“º</div>
            )}
            <div class="watch-date"><Calendar width={24} height={24} />{formatDate(item.stopped)}</div>
          </div>
        ))}
      </div>
    )}
  </section>
  <hr>
  <BackToTop />
</BaseLayout>