---
import BaseLayout from "@layouts/BaseLayout.astro";
import type { CollectionEntry } from "astro:content";
import { getCollection, render } from "astro:content";
import FormattedDate from "@components/FormattedDate.astro";
import ReadingTime from "@components/ReadingTime.astro";
import BackToTop from "@components/BackToTop.astro";

export async function getStaticPaths() {
	const allPosts = await getCollection("blog").then((collection) => {
		return collection.sort(
			(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
		);
	});

	const tags: string[] = [];

	allPosts.forEach((post) => {
		post.data.tags.forEach((tag) => {
			tags.push(tag.toLowerCase());
		});
	});

	return await Promise.all(
		Array.from(new Set(tags)).map(async (tag) => {
			const filteredPosts = allPosts.filter((post) =>
				post.data.tags.map((tag) => tag.toLowerCase()).includes(tag),
			);

			const postsWithReadingTime = await Promise.all(
				filteredPosts.map(async (post) => {
					const { remarkPluginFrontmatter } = await render(post);
					return {
						...post,
						readingTime: remarkPluginFrontmatter.readingTime
					};
				})
			);

			return {
				params: { tag },
				props: {
					tag,
					posts: postsWithReadingTime,
				},
			};
		})
	);
}

export interface Props {
	tag: string;
	posts: (CollectionEntry<"blog"> & { readingTime: string })[];
}

const { tag, posts } = Astro.props;
---


<style scoped>
  h1 {
    font-family: var(--sub-font);
    font-weight: 900;
  }
  hr {
    margin-bottom: 0.5em;
  }
  .back {
    justify-content: space-between;
    font-family: var(--sub-font);
    font-weight: 500;
    margin: 0 auto;
    padding: 0;
  }
  .back a {
    font-size: 24px;
    color: var(--link);
  }
  .back a:hover {
    color: var(--hover);
    transition: all .25s ease-out;
    margin: 0;
  }
  ul {
    list-style-type: none;
    margin: 0 auto 2em auto;
    padding: 0;
  }
  li {
    display: inline-block;
    margin: 0 auto 1em auto;
  }
  li:last-of-type {
    margin: 0 auto;
  }
  div {
    display: block;
    padding-bottom: 0.25em;
    border-bottom: 4px dotted transparent;
  }
  p {
    margin: 0 auto 0.125em auto;
    padding: 0 auto;
  }
  .years {
    margin: 1em auto;
  }
  .years a {
    font-family: var(--sub-font);
    font-weight: 700;
    font-size: 0.9em;
  }
  .back {
    display: flex;
    justify-content: space-between;
    margin-top: 1em;
  }
  button {
    margin: 0 0.175em;
    background: var(--info);
    cursor: pointer;
  }
  button:first-of-type {
    margin-left: 0;
  }
  .info {
    place-items: center;
    margin-top: 0.1em;
    display: inline-flex;
    gap: 0.25em
  }
  .tag {
    margin: 0.125em 0 0 0;
    padding: 0;
  }
  .title {
    display: block;
    font-weight: bold;
    line-height: 1.2;
    color: var(--emphasis);
  }
  .title a:hover {
    color: var(--hover);
  }
  .desc {
    margin-top: -0.25em;
  }
  li:hover div {
    border-bottom: 4px dotted var(--hover);
    cursor: pointer;
    transition: all .25s ease-out;
  }
  li:hover .title {
    color: var(--hover);
    transition: all .25s ease-out;
  }
  @media (hover: hover) {
    li:hover button {
      box-shadow: -4px -4px 0 #000;
      transform: translate(4px, 4px);
    }
    li:hover button {
      outline-offset: 1px;
    }
  }
</style>

<BaseLayout title={`${tag}`}>
  <section>
    <h1>Posts about <span class="tag">{`${tag}`}</span></h1>
    <hr />
    <p class="back">
      <a href="/categories/" rel="prefetch-intent">↩ Categories</a>
      <a href="/blog/" rel="prefetch-intent">All posts ↪</a>
    </p>
    <p class="years">
      Alternately, see posts by year:&nbsp;
      <a href="/blog/years/2025/" data-umami-event="blog-2025">2025</a>&nbsp;
      <a href="/blog/years/2024/" data-umami-event="blog-2024">2024</a>&nbsp;
      <a href="/blog/years/2023/" data-umami-event="blog-2023">2023</a>&nbsp;
      <a href="/blog/years/2022/" data-umami-event="blog-2022">2022</a>&nbsp;
      <a href="/blog/years/2021/" data-umami-event="blog-2021">2021</a>
    </p>
    <ul>
      {
        posts.map((post) => (
          <li>
            <a href={`/blog/${post.id}/`} rel="prefetch-intent" data-umami-event={`${tag}-${post.id}`}>
              <div>
                <span class="title">{post.data.title}</span>
                <p class="tag">
                  {post.data.tags.map((tag) => (
                    <button>{tag}</button>
                  ))}
                </p>
                <p class="info">
                  <FormattedDate date={post.data.pubDate} />&nbsp;
                  <span class="reading"><ReadingTime time={post.readingTime} /></span>
                </p>
                <p class="desc">{post.data.description}</p>
              </div>
            </a>
          </li>
        ))
      }
    </ul>
    <hr />
    <BackToTop />
  </section>
</BaseLayout>