---
import BaseLayout from "@layouts/BaseLayout.astro";
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');
const tagCounts = {};
allPosts.forEach(post => {
  post.data.tags?.forEach(tag => {
    tagCounts[tag] = (tagCounts[tag] || 0) + 1;
  });
});
const tags = Object.entries(tagCounts)
  .map(([tag, count]) => ({ tag, count }))
  .sort((a, b) => a.tag.localeCompare(b.tag));
const title = "Categories";
const desc = "Blog posts by category";
---

<style scoped>
  h1 {
    font-family: "M Plus Rounded 1c Reg";
  }
  ul {
    display: grid;
    grid-template-columns: repeat(4, auto);
    gap: auto;
    list-style-type: none;
    margin: 0 auto 2em auto;
    padding: 0 auto;
  }
  li {
    margin: 0.5em 0;
  }
  li a {
    margin: 2px auto;
    padding: 0 auto;
  }
  li a:hover {
    margin: 2px auto;
    padding: 0 auto;
  }
  button {
    background: var(--tags);
  }
  button:hover {
    cursor: pointer;
  }
  .count {
    font-family: 'M Plus Rounded 1c Med', 'Atkinson', Monaco, Consolas, 'Andale Mono', 'Ubuntu Mono', monospace;
    color: var(--emphasis);
  }
  p {
    margin-bottom: 2em;
  }
  @media screen and (min-width: 755px) and (max-width: 1000px) {
    ul {
        grid-template-columns: repeat(3, auto);
      }
  }
  @media screen and (min-width: 601px) and (max-width: 754px) {
    ul {
      grid-template-columns: repeat(2, auto);
    }
  }
  @media screen and (max-width: 600px) {
    ul {
      grid-template-columns: repeat(1, auto);
      gap: 0 auto;
      justify-content: space-around;
      place-items: center;
      margin-bottom: 1.5em;
    }
    li {
      margin: 0.5em auto;
    }
  }
</style>

<BaseLayout title={title} description={desc}>
  <section>
    <h1>{title}</h1>
    <hr />
    <p>
      Click on categories below to see blog posts about that subject.
    </p>

    <ul>
      {tags.map(({ tag, count }) => (
        <li>
          <a href={`/categories/${tag}`}>
            <button>{tag}</button> <span class="count"> ({count})</span>
          </a>
        </li>
      ))}
    </ul>
    <hr />
  </section>
</BaseLayout>