---
import BaseLayout from "@layouts/BaseLayout.astro";
import { getCollection, render, type CollectionEntry, type InferEntrySchema, type RenderedContent } from "astro:content";
import FormattedDate from "@components/FormattedDate.astro";
import ReadingTime from "@components/ReadingTime.astro";
import Link from "@components/Link.astro";
import BackToTop from "@components/BackToTop.astro";
import type { Page, GetStaticPaths } from "astro";

function getReadingTime(content: string | undefined): string {
  if (!content) return '0 min read';
  const wordsPerMinute = 200;
  const words = content.trim().split(/\s+/).length;
  const minutes = Math.ceil(words / wordsPerMinute);
  return `${minutes} min read`;
}

export const getStaticPaths = (async ({ paginate }) => {
  const allPosts = await getCollection('blog');
  
  const sortedPosts = allPosts.sort((a, b) => 
    new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
  );
  
  const postsByYear = sortedPosts.reduce((acc, post) => {
    const year = new Date(post.data.pubDate).getFullYear().toString();
    if (!acc[year]) {
      acc[year] = [];
    }
    acc[year].push(post);
    return acc;
  }, {} as Record<string, typeof allPosts>);
  
  return Object.entries(postsByYear).flatMap(([year, posts]) => {
    return paginate(posts, {
      params: { year },
      pageSize: 10,
    });
  });
}) satisfies GetStaticPaths;

interface Props {
  page: Page<CollectionEntry<'blog'> & { readingTime: string }>;
}

const { page } = Astro.props;
const { year } = Astro.params;

const title = `Blog Posts - ${year}`;
const desc = `A list of blog posts written in ${year}`;
---

<style scoped>
  h1 {
    font-family: var(--sub-font);
    font-weight: 900;
  }
  .total {
    font-family: var(--sub-font);
    font-weight: 900;
    font-size: 0.95em;
    color: var(--emphasis)
  }
  .rss {
    display: flex;
    place-items: center;
    margin-top: 1em;
    gap: 0.25em;
    font-family: var(--sub-font);
    color: var(--emphasis);
    font-weight: 900;
  }
  ul {
    list-style-type: none;
    margin: 0 auto;
    padding: 0;
  }
  li {
    display: inline-block;
    margin: 0 auto;
    margin-bottom: 2em;
  }
  li:last-of-type {
    margin-bottom: 0;
  }
  div {
    display: block;
    padding-bottom: 0.25em;
    border-bottom: 2px solid transparent;
  }
  p {
    margin: 0 auto 0.125em auto;
    padding: 0 auto;
  }
  .years {
    margin: 1em auto 2em;
  }
  .years a {
    font-family: var(--sub-font);
    font-weight: 700;
    font-size: 0.9em;
    margin-right: 0.5em;
    border-bottom: 1px solid transparent;
  }
  .years span.active {
    font-family: var(--sub-font);
    font-weight: 900;
    font-size: 0.9em;
    color: var(--primary);
    margin-right: 0.5em;
    border-bottom: 1px solid var(--primary);
  }
  .back {
    display: flex;
    justify-content: space-between;
  }
  button {
    margin: 0 0.175em;
    background: var(--info);
    cursor: pointer;
  }
  button:first-of-type {
    margin-left: 0;
  }
  .info {
    place-items: center;
    margin-top: 0.1em;
    display: inline-flex;
    gap: 0.25em
  }
  .tag {
    margin: 0.125em 0 0 0;
    padding: 0;
  }
  .title {
    display: block;
    font-weight: bold;
    line-height: 1.2;
    color: var(--emphasis);
  }
  .title a:hover {
    color: var(--hover);
  }
  .desc {
    margin-top: -0.25em;
  }
  li:hover div {
    border-bottom: 2px solid var(--hover);
    cursor: pointer;
    transition: all .25s ease-out;
  }
  li:hover .title {
    color: var(--hover);
    transition: all .25s ease-out;
  }
  @media (hover: hover) {
    li:hover button {
      box-shadow: -4px -4px 0 #000;
      transform: translate(4px, 4px);
    }
    li:hover button {
      outline-offset: 1px;
    }
    button {
      text-overflow: ellipsis;
      transition: all .10s ease-out;
      cursor: pointer;
    }
    button:hover {
      box-shadow: -4px -4px 0 #000;
      transform: translate(4px,4px);
      cursor: pointer;
    }
    button:focus-visible{
      outline-offset: 1px;
    }
  }
  .page-info-top {
    display: flex;
    font-weight: 900;
    margin: 1em auto -1.75em auto;
    justify-content: space-around;
    place-items: center;
    font-family: var(--sub-font);
    color: var(--primary);
  }
  .page-info {
    display: flex;
    font-weight: 500;
    margin: 1em auto -1.75em auto;
    justify-content: space-around;
    place-items: center;
    font-family: var(--sub-font);
    font-weight: 900;
    color: var(--primary);
  }
  .pagination {
    display: grid;
    justify-content: space-between;
    font-family: var(--sub-font);
    font-weight: 500;
    margin: 0 0 1em 0;
  }
  .pagination a {
    border-bottom: 2px solid transparent;
  }
  .pagination a:hover {
    border-bottom: 2px solid var(--hover);
  }
  .prev {
    grid-column: 1;
    justify-content: start;
  }
  .next {
    grid-column: 3;
    justify-content: end;
  }
  .bottom-line {
    margin-top: 2em;
  }
  @keyframes wiggle {
    0%, 100% { transform: rotate(0deg); }
    25% { transform: rotate(-5deg); }
    75% { transform: rotate(5deg); }
  }
  .blurb svg:hover {
    animation: wiggle 0.5s ease-in-out infinite;
  }

  .blurb svg:not(:hover) {
    animation: none;
  }
  @media screen and (max-width: 667px) {
    section {
      line-height: 1.2;
    }
    .years {
      margin-bottom: 1em;
    }
    .info {
      display: block;
      margin-top: 0.25em;
      margin-bottom: 0.5em;
    }
    .tag button {
      margin: 0 0.25em 0.25em 0;
    }
    .page-info-top {
      font-size: 0.875em;
      margin: 1.5em 0 -1.3em 0;
      padding: 0;
    }
    .page-info {
      font-size: 0.875em;
      margin: 1.5em 0 -1.25em 0;
      padding: 0.1em 0 0 0;
    }
    .pagination {
      font-size: 0.875em;
    }
  }
</style>

<BaseLayout title={title} description={desc}>
  <section>
    <h1>Blog Posts - {year}</h1>
    <hr />
    <p class="back">
      <a href="/blog/" rel="prefetch-intent">↩ Back to Blog</a>
      <a href="/categories/" rel="prefetch-intent">Categories ↪</a>
    </p>
    <nav class="years">
      See more years:&nbsp;
      <Link href="/blog/years/2025/" rel="prefetch-intent" aria-label="2025">2025</Link>
      <Link href="/blog/years/2024/" rel="prefetch-intent" aria-label="2024">2024</Link>
      <Link href="/blog/years/2023/" rel="prefetch-intent" aria-label="2023">2023</Link>
      <Link href="/blog/years/2022/" rel="prefetch-intent" aria-label="2022">2022</Link>
      <Link href="/blog/years/2021/" rel="prefetch-intent" aria-label="2021">2021</Link>
    </nav>
    <ul>
      {
        page.data.map((post) => (
          <li>
            <div>
              <a href={`/blog/${post.id}/`} rel="prefetch-intent" data-umami-event={post.id}>
                <span class="title">{post.data.title}</span>
                <p class="tag">
                  {post.data.tags.map((tag) => (
                    <button>{tag}</button>
                  ))}
                </p>
                <p class="info">
                  <FormattedDate date={post.data.pubDate} />&nbsp;
                  <span class="reading"><ReadingTime time={getReadingTime(post.body)} /></span>
                </p>
                <p class="desc">{post.data.description}</p>
              </a>
            </div>
          </li>
        ))
      }
    </ul>
    <hr class="bottom-line" />
    <BackToTop />
  </section>
</BaseLayout>