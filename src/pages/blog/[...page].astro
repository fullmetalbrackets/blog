---
import BaseLayout from "@layouts/BaseLayout.astro";
import { getCollection, render, type CollectionEntry, type InferEntrySchema, type RenderedContent } from "astro:content";
import FormattedDate from "@components/FormattedDate.astro";
import ReadingTime from "@components/ReadingTime.astro";
import BackToTop from "@components/BackToTop.astro";
import type { Page } from "astro";

export async function getStaticPaths({ paginate }) {
  const posts = (await getCollection("blog")).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
  );
  
  const pages = paginate(posts, { pageSize: 5 });
  
  return await Promise.all(
    pages.map(async (page: { props: { page: { data: any[]; }; }; }) => {
      const postsWithReadingTime = await Promise.all(
        page.props.page.data.map(async (post: { id: string; body?: string; collection: "blog"; data: InferEntrySchema<"blog">; rendered?: RenderedContent; filePath?: string; }) => {
          const { remarkPluginFrontmatter } = await render(post);
          return {
            ...post,
            readingTime: remarkPluginFrontmatter.readingTime
          };
        })
      );
      
      return {
        ...page,
        props: {
          page: {
            ...page.props.page,
            data: postsWithReadingTime
          }
        }
      };
    })
  );
}

interface Props {
  page: Page<CollectionEntry<'blog'> & { readingTime: string }>;
}

const { page } = Astro.props;

const title = `Blog Posts - Page ${page.currentPage} of ${page.lastPage}`;
const desc = "List of all blog posts";
---

<style scoped>
  h1 {
    font-family: var(--sub-font);
    font-weight: 900;
  }
  .total {
    font-family: var(--sub-font);
    font-weight: 900;
    font-size: 0.95em;
    color: var(--emphasis)
  }
  .rss {
    display: flex;
    place-items: center;
    margin-top: 1em;
    gap: 0.25em;
    font-family: var(--sub-font);
    color: var(--emphasis);
    font-weight: 900;
  }
  ul {
    list-style-type: none;
    margin: 0 auto;
    padding: 0;
  }
  li {
    display: inline-block;
    margin: 0 auto 1em auto;
  }
  li:last-of-type {
    margin: 0 auto;
  }
  div {
    display: block;
    padding-bottom: 0.25em;
    border-bottom: 4px dotted transparent;
  }
  p {
    margin: 0 auto;
    padding: 0 auto;
  }
  .years {
    margin: 1em auto;
  }
  .years a {
    font-family: var(--sub-font);
    font-weight: 700;
    font-size: 0.9em;
  }
  button {
    margin: 0 0.175em;
    background: var(--info);
    cursor: pointer;
  }
  button:first-of-type {
    margin-left: 0;
  }
  .info {
    place-items: center;
    margin-top: 0.1em;
    display: inline-flex;
    gap: 0.25em
  }
  .tag {
    margin: 0.125em 0 0 0;
    padding: 0;
  }
  .title {
    display: block;
    font-weight: bold;
    line-height: 1.2;
    color: var(--emphasis);
  }
  .title a:hover {
    color: var(--hover);
  }
  .desc {
    margin-top: -0.25em;
  }
  li:hover div {
    border-bottom: 4px dotted var(--hover);
    cursor: pointer;
    transition: all .25s ease-out;
  }
  li:hover .title {
    color: var(--hover);
    transition: all .25s ease-out;
  }
  @media (hover: hover) {
    li:hover button {
      box-shadow: -4px -4px 0 #000;
      transform: translate(4px, 4px);
    }
    li:hover button {
      outline-offset: 1px;
    }
    button {
      text-overflow: ellipsis;
      transition: all .10s ease-out;
      cursor: pointer;
    }
    button:hover {
      box-shadow: -4px -4px 0 #000;
      transform: translate(4px,4px);
      cursor: pointer;
    }
    button:focus-visible{
      outline-offset: 1px;
    }
  }
  .page-info-top {
    display: flex;
    font-weight: 900;
    margin: 1em auto -1.75em auto;
    justify-content: space-around;
    place-items: center;
    font-family: var(--sub-font);
    color: var(--primary);
  }
  .page-info {
    display: flex;
    font-weight: 500;
    margin: 1em auto -1.75em auto;
    justify-content: space-around;
    place-items: center;
    font-family: var(--sub-font);
    font-weight: 900;
    color: var(--primary);
  }
  .pagination {
    display: grid;
    justify-content: space-between;
    font-family: var(--sub-font);
    font-weight: 500;
    margin: 0 0 1em 0;
  }
  .pagination a {
    border-bottom: 4px dotted transparent;
  }
  .pagination a:hover {
    border-bottom: 4px dotted var(--hover);
  }
  .prev {
    grid-column: 1;
    justify-content: start;
  }
  .next {
    grid-column: 3;
    justify-content: end;
  }

  @keyframes wiggle {
    0%, 100% { transform: rotate(0deg); }
    25% { transform: rotate(-5deg); }
    75% { transform: rotate(5deg); }
  }
  .blurb svg:hover {
    animation: wiggle 0.5s ease-in-out infinite;
  }

  .blurb svg:not(:hover) {
    animation: none;
  }
  @media screen and (max-width: 667px) {
    section {
      line-height: 1.2;
    }
    .info {
      display: block;
      margin-top: 0.25em;
      margin-bottom: 0.5em;
    }
    .tag button {
      margin: 0 0.25em 0.25em 0;
    }
    .page-info-top {
      font-size: 0.875em;
      margin: 1.5em 0 -1.3em 0;
      padding: 0;
    }
    .page-info {
      font-size: 0.875em;
      margin: 1.5em 0 -1.25em 0;
      padding: 0.1em 0 0 0;
    }
    .pagination {
      font-size: 0.875em;
    }
  }
</style>

<BaseLayout title={title} description={desc}>
  <section>
    <h1>Blog</h1>
    <hr />
    <p class="blurb">
      <span>
        List of all <span class="total">{page.total}</span> blog posts. Alternatively, <a href="/categories/" rel="prefetch-intent" data-umami-event="blog-category">see posts by category</a> or <a href="/search/" rel="prefetch-intent" data-umami-event="blog-search">search the blog</a>.
      </span>
      <p class="years">
        See posts by year:&nbsp;
        <a href="/blog/years/2026/" data-umami-event="blog-2026">2026</a>&nbsp;
        <a href="/blog/years/2025/" data-umami-event="blog-2025">2025</a>&nbsp;
        <a href="/blog/years/2024/" data-umami-event="blog-2024">2024</a>&nbsp;
        <a href="/blog/years/2023/" data-umami-event="blog-2023">2023</a>&nbsp;
        <a href="/blog/years/2022/" data-umami-event="blog-2022">2022</a>&nbsp;
        <a href="/blog/years/2021/" data-umami-event="blog-2021">2021</a>
      </p>
      <span class="rss">RSS Feed: 
        <a href="/rss.xml" rel="prefetch-intent">
          <svg xmlns="http://www.w3.org/2000/svg" version="1.1" style="vertical-align: text-bottom; width: 1.325em; height: 1.325em;" class="pr-1" id="RSSicon" viewBox="0 0 256 256">
            <title>RSS Feed</title>
            <defs>
              <linearGradient x1="0.085" y1="0.085" x2="0.915" y2="0.915" id="RSSg">
                <stop  offset="0.0" stop-color="#E3702D"/><stop  offset="0.1071" stop-color="#EA7D31"/>
                <stop  offset="0.3503" stop-color="#F69537"/><stop  offset="0.5" stop-color="#FB9E3A"/>
                <stop  offset="0.7016" stop-color="#EA7C31"/><stop  offset="0.8866" stop-color="#DE642B"/>
                <stop  offset="1.0" stop-color="#D95B29"/>
              </linearGradient>
            </defs>
            <rect width="256" height="256" rx="55" ry="55" x="0"  y="0"  fill="#CC5D15"/>
            <rect width="246" height="246" rx="50" ry="50" x="5"  y="5"  fill="#F49C52"/>
            <rect width="236" height="236" rx="47" ry="47" x="10" y="10" fill="url(#RSSg)"/>
            <circle cx="68" cy="189" r="24" fill="#FFF"/>
            <path d="M160 213h-34a82 82 0 0 0 -82 -82v-34a116 116 0 0 1 116 116z" fill="#FFF"/>
            <path d="M184 213A140 140 0 0 0 44 73 V 38a175 175 0 0 1 175 175z" fill="#FFF"/>
          </svg>
        </a>
      </span>
    </p>
    <div class="page-info-top">Page {page.currentPage} of {page.lastPage}</div>
    <nav class="pagination" aria-label="Blog pagination">
      <span class="prev">
        {page.url.prev ? (
          <a href={page.url.prev} rel="prefetch-intent prev">↖ Newer</a>
        ) : (
          <span></span>
        )}
      </span>
      <span class="next">
        {page.url.next ? (
          <a href={page.url.next} rel="prefetch-intent next">Older ↘</a>
        ) : (
          <span></span>
        )}
      </span>
    </nav>
    <ul>
      {
        page.data.map((post) => (
          <li>
            <div>
              <a href={`/blog/${post.id}/`} rel="prefetch-intent" data-umami-event={post.id}>
                <span class="title">{post.data.title}</span>
                <p class="tag">
                  {post.data.tags.map((tag) => (
                    <button>{tag}</button>
                  ))}
                </p>
                <p class="info">
                  <FormattedDate date={post.data.pubDate} />&nbsp;
                  <span class="reading"><ReadingTime time={post.readingTime} /></span>
                </p>
                <p class="desc">{post.data.description}</p>
              </a>
            </div>
          </li>
        ))
      }
    </ul>
    
    <div class="page-info">Page {page.currentPage} of {page.lastPage}</div>
    <nav class="pagination" aria-label="Blog pagination">
      <span class="prev">
        {page.url.prev ? (
          <a href={page.url.prev} rel="prefetch-intent prev">↖ Newer</a>
        ) : (
          <span></span>
        )}
      </span>
      <span class="next">
        {page.url.next ? (
          <a href={page.url.next} rel="prefetch-next">Older ↘</a>
        ) : (
          <span></span>
        )}
      </span>
    </nav>
    <hr />
    <BackToTop />
  </section>
</BaseLayout>
