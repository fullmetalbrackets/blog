---
import BaseLayout from "@layouts/BaseLayout.astro";
import { getCollection, type CollectionEntry } from "astro:content";
import FormattedDate from "@components/FormattedDate.astro";
import BackToTop from "@components/BackToTop.astro";
import type { Page } from "astro";

export async function getStaticPaths({ paginate }) {
  const posts = (await getCollection("blog")).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
  );
  
  // Paginate with 5 posts per page
  return paginate(posts, { pageSize: 5 });
}

interface Props {
  page: Page<CollectionEntry<'blog'>>; // Assuming 'blog' is your collection and Page is correctly imported
}

const { page } = Astro.props;

const title = "Blog";
const desc = "List of all blog posts";
---

<style scoped>
  h1 {
    font-family: "M Plus Rounded 1c Reg";
  }
  .blurb {
    margin-bottom: 2em;
  }
  ul {
    list-style-type: none;
    margin: 0 auto;
    padding: 0;
  }
  li {
    display: inline-block;
    margin: 0 auto;
    margin-bottom: 2em;
  }
  li:last-of-type {
    margin-bottom: 0;
  }
  div {
    padding-bottom: 0.25em;
    border-bottom: 2px solid transparent;
  }
  p {
    margin: 0 auto 0.125em auto;
    padding: 0 auto;
  }
  button {
    margin: 0 0.175em;
    background: var(--info);
    cursor: pointer;
  }
  button:first-of-type {
    margin-left: 0;
  }
  .title a,
  .title a:active,
  .title a:visited {
    color: var(--primary);
  }
  .title a:hover {
    color: var(--hover);
  }
  li:hover div {
    border-bottom: 2px solid var(--hover);
    cursor: pointer;
  }
  li:hover .title {
    color: var(--hover);
  }
  .pagination {
    display: grid;
    justify-content: space-between;
    font-family: 'M Plus Rounded 1c Med', 'Atkinson', Monaco, Consolas, 'Andale Mono', 'Ubuntu Mono', monospace;
    color: var(--emphasis);
    margin: 1em 0 2em 0;
  }
  .pagination a {
    border-bottom: 2px solid transparent;
  }
  .pagination a:hover {
    border-bottom: 2px solid var(--hover);
  }
  .prev {
    grid-column: 1;
  }
  .page-info {
    grid-column: 2;
    font-weight: 500;
  }
  .next {
    grid-column: 3;
  }
  @media screen and (min-width: 200px) and (max-width: 667px) {
    section {
      line-height: 1.2;
    }
    .info {
      margin-bottom: 0.25em;
    }
    .tag {
      display: block;
      margin-top: 0.25em;
    }
    .pagination {
      display: grid;
      justify-content: space-around;
      place-items: center;
    }
    .page-info {
      display: grid;
      grid-row: 1;
      margin-bottom: 0.5em;
    }
    .prev, .next {
      display: grid;
      grid-row: 2;
      margin: 0 auto;
      padding: 0 auto;
    }
  }
</style>

<BaseLayout title={title} description={desc}>
  <section>
    <h1>{title}</h1>
    <hr />
    <p class="blurb">
      List of all blog posts. Alternatively, see <a href="/categories/" data-umami-event="blog-category">see posts by category</a> or <a href="/search/" data-umami-event="blog-search">search for specific posts</a>.
    </p>
    <ul>
      {
        page.data.map((post) => (
          <li>
            <div>
              <a href={`/blog/${post.id}/`} rel="prefetch-intent" data-umami-event={post.id}>
                <span class="title">{post.data.title}</span>
                <p class="info">
                  <FormattedDate date={post.data.pubDate} />&nbsp;
                  <span class="tag">
                    {post.data.tags.map((tag) => (
                      <button>{tag}</button>
                    ))}
                  </span>
                </p>
                <p class="desc">{post.data.description}</p>
              </a>
            </div>
          </li>
        ))
      }
    </ul>
    
    <nav class="pagination" aria-label="Blog pagination">
      <span class="prev">
        {page.url.prev ? (
          <a href={page.url.prev} rel="prev">&larr; Newer</a>
        ) : (
          <span></span>
        )}
      </span>
      <span class="page-info">Page {page.currentPage} of {page.lastPage}</span>
      <span class="next">
        {page.url.next ? (
          <a href={page.url.next} rel="next">Older &rarr;</a>
        ) : (
          <span></span>
        )}
      </span>
    </nav>
    <!-- <p class="back-latest"><a href="/blog/1">&#8626; Back to Latest Articles</p> -->
    <hr />
    <BackToTop />
  </section>
</BaseLayout>
