---
import BaseLayout from "@layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import FormattedDate from "@components/FormattedDate.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
const title = "Blog";
const desc = "List of all blog posts";
---

<style scoped>
  ul {
    list-style-type: none;
    margin: 0 auto 0 -1.5em;
  }
  li {
    display: inline-block;
    margin: 0 auto;
  }
  p {
    margin: 0;
  }
  .desc {
    margin-bottom: 2em;
  }
  .title {
    margin: 0 auto;
  }
  .title a,
  .title a:active,
  .title a:visited {
    color: var(--primary);
  }
  .title a:hover {
    color: var(--menu);
  }
  @media screen and (min-width: 200px) and (max-width: 667px) {
    .title {
      font-size: 20px;
    }
  }
</style>

<BaseLayout title={title} description={desc}>
  <section>
    <h1>{title}</h1>
    <hr />
    <ul>
      {
        posts.map((post) => (
          <li>
            <a href={`/blog/${post.slug}/`} rel="prefetch-intent">
              <p>
                <FormattedDate date={post.data.pubDate} />
              </p>
              <p class="title">{post.data.title}</p>
              <p class="desc">{post.data.description}</p>
            </a>
          </li>
        ))
      }
    </ul>
    <hr />
    <aside>
      <a href="#top" class="top button blog-tag">Back to Top &uarr;</a>
    </aside>
  </section>
</BaseLayout>
