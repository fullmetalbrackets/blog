---
import BaseLayout from '@layouts/BaseLayout.astro';

const title = 'Page not found'
const desc = 'This page does not seem to exist.'
---

	<BaseLayout title={title} description={desc}>
		<head>
			<meta http-equiv="refresh" content="5;url=/" />
		</head>
	<style>
		hr {
			margin: 1.5em 0 2.5em 0;
		}
		h1 {
			font-size: 36px;
			margin-top: 1.9em;
			margin-bottom: 0;
		}
		p {
			margin: 2em auto 10em auto;
		}
		#go-back {
			cursor: pointer;
		}
		@media screen and (min-width: 200px) and (max-width: 667px) {
			h1 {
				font-size: 36px;
				margin-top: 1.575em;
			}
			hr {
				margin-top: 21.5px;
				margin-bottom: 1.75em;
			}
			form {
				margin: 1em;
			}
		}
	</style>
	<section>
		<h1>{title}</h1>
		<hr>
		<p>
			{desc}&nbsp;<a href="javascript:javascript:history.go(-1)" id="go-back">Go back</a> or <a href="/">return to the Home page</a>. You will be redirected to the Home page in 5 seconds.
		</p>
	</section>
</BaseLayout>