---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
	content: {
		title: string;
		description: string;
		pubDate?: string;
		updatedDate?: string;
		heroImage?: string;
	};
}

const {
	content: { title, description, pubDate, updatedDate },
} = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<link rel="stylesheet" href="../../prism.css">
		<style>
			article {
				padding-top: 1em;
			}
			hr {
				margin-bottom: 3em;
			}
			h3 {
				margin-top: 5em;
			}
			.title {
				font-size: 2em;
				margin: 0.25em 0 0.25em;
			}
			aside {
				display: flex;
				justify-content: right;
				border-style: dotted;
				font-size: 2rem;
				font-family: 'Streamster';
				font-weight: 700;
				border-style: none;
				cursor: pointer;
				margin: 0 auto;
			}
			aside > a, a:active, a:visited {
				color: #FF39A8;
			}
			aside > a:hover {
				color: #F986DE;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<h1 class="title">{title}</h1>
				{pubDate && <time>{pubDate}</time>}
				{updatedDate && <div>Last updated on <time>{updatedDate}</time></div>}
				<hr/>
				<slot />
			</article>
			<aside>
				<a href="#top">Back to Top</a>
			</aside>
		</main>
		<Footer />
	</body>
</html>