---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { generateTagsData } from "../utils/tags";

export interface Props {
	content: {
		title: string;
		description: string;
		pubDate?: string;
		updatedDate?: string;
		tags?: string;
	};
}

const {
	content: { title, description, pubDate, updatedDate, tags },
} = Astro.props;
const allTagsData = generateTagsData(tags);
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<link rel="stylesheet" href="../../prism.css">
		<style>
			article {
				padding-top: 0.875em;
			}
			hr {
				margin: 1em 0 3em 0;
			}
			.title {
				font-size: 2em;
				margin: 0.8em 0;
				line-height: 40px;
			}
			ol, ul {
				display: flex;
				flex-wrap: wrap;
				list-style-type: none;
				margin: 0 auto;
				margin-top: 10px;
				padding: 0;
			}
			li {
				margin: 4px;
				padding: 2px 4px;
				background: var(--lightpink);
				color: #000;
				font-weight: bold;
				border-radius: 0.25em;
				list-style-type: none;
			}
			li:hover {
				background: var(--pink);
			}
			aside {
				display: flex;
				justify-content: right;
				border-style: dotted;
				font-size: 2rem;
				font-family: 'Streamster';
				font-weight: 700;
				border-style: none;
				cursor: pointer;
				margin: 0 auto;
			}
			aside > a, a:active, a:visited {
				color: var(--pink);
			}
			aside > a:hover {
				color: var(--lightpink);
			}
			@media screen and (min-width: 200px) and (max-width: 767px) {
				* {
					font-size: 16px;
				}
				a, a:active, a:visited, a:hover {
					font-size: 1em;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				{pubDate && <time>{pubDate}</time>}
				{updatedDate && <div>Updated on <time>{updatedDate}</time></div>}
				<h1 class="title">{title}</h1>
				<ul>
					{allTagsData.map(tags => (
						<a href={`/blog/tags/${tags.slug}`}><li>{tags.name}</li></a>
					))}
				</ul>
				<hr/>
				<slot />
			</article>
			<aside>
				<a href="#top">Back to Top</a>
			</aside>
		</main>
		<Footer />
	</body>
</html>