---
import type { CollectionEntry } from "astro:content";
import BaseLayout from "@layouts/BaseLayout.astro";
import FormattedDate from "@components/FormattedDate.astro";
import { SocialShare } from "astro-social-share";

type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate, updatedDate, tags } = Astro.props;

const { slug } = Astro.params;
---

<BaseLayout title={title} description={description}>
  <head>
    <link rel="stylesheet" href="/prism.css" />
  </head>
  <style scoped>
    h1 {
      margin-bottom: 0.5em;
      line-height: 1.1;
    }
    hr {
      margin-top: 1em;
    }
    article {
      margin: 2em auto;
    }
    div {
      display: inline-flex;
      gap: 1em;
      place-items: center;
      justify-content: center;
      grid-template-columns: 1fr 1fr;
      margin: 0 auto;
      padding: 0 auto;
      text-wrap: auto;
    }
    .tag, .date {
      margin: 0 auto;
      padding: 0 auto;
    }
    .description {
      margin: 1.5em auto 1.5em ;
    }
    .last-updated-on {
      margin: 0 0.25em;
    }
    button {
      background-color: var(--info);
      text-overflow: ellipsis;
      -webkit-transition: all .10s ease-out;
      -moz-transition: all .10s ease-out;
      -o-transition: all .10s ease-out;
      transition: all .10s ease-out;
      cursor: pointer;
    }
    .top {
      font-size: 0.75em;
    }
    li:hover {
      padding-bottom: 0.25em;
      border-bottom: 2px solid var(--hover);
    }
    @media (hover: hover) {
      a:hover button {
        box-shadow: -4px -4px 0 #000;
        transform: translate(4px, 4px);
      }
      a:hover button {
        outline-offset: 1px;
        text-overflow: ellipsis;
      }
    }
    @media (hover: none) {
      a:hover button {
        background-color: var(--menu);
      }
    }
    form {
      display: flex;
      align-items: center;
    }
    label {
      color: var(--text);
      margin-right: 1em;
    }
    .post-end {
      font-family: "M Plus Rounded 1c Med";
      margin: 0 auto 2em auto;
    }
    .coffee {
      display: grid;
      color: var(--primary);
      grid-template-columns: 1fr;
      grid-template-rows: 1fr 1fr;
      place-items: center;
      gap: 0;
      padding: 0 auto;
      cursor: default;
      width: 325px;
    }
    .coffee span {
      margin-bottom: 1em;
    }
    .share {
      display: grid;
      color: var(--primary);
      grid-column: 2;
      grid-template-columns: auto;
      grid-template-rows: auto auto;
      place-items: center;
      gap: 0;
      cursor: default;
      width: 325px;
      height: 130px;
    }
    .umami {
      display: grid;
      color: var(--primary);
      grid-template-columns: auto;
      grid-template-rows: auto auto;
      padding-top: 0.3em;
      cursor: default;
      width: 325px;
      height: 115px;
    }
    .stats {
      display: inline-block;
      background-color: var(--info);
      color: #000;
      border-radius: 0.5em;
      cursor: pointer;
      font-weight: 600;
      margin: 0 auto;
      padding: 6px 10px;
      text-decoration: none;
      font-family: 'M Plus Rounded 1c Med';
      line-height: 1.5;
    }
    .umami img {
      display: inline;
      filter: brightness(0) saturate(100%);
      height: 24px;
      width: auto;
      padding: 0 auto;
      margin: 0 0 -1px 0;
      border-radius: 0;
      cursor: pointer;
    }
    .stats a {
      color: #000;
    }
    .stats:hover a {
      color: var(--coffee);
    }
    .stats:hover img {
      filter: var(--coffee-hover);
    }
    .questions {
      display: grid;
      place-items: center;
      grid-template-columns: auto;
      grid-template-rows: auto;
      width: 325px;
    }
    .questions span {
      font-family: "M Plus Rounded 1c Med";
      color: var(--primary);
    }
    .email {
      display: inline-flex;
      align-items: center;
      text-align: center;
      border-radius: 0.5em;
      cursor: pointer;
      font-weight: 600;
      margin: 0 auto;
      text-decoration: none;
      font-family: 'M Plus Rounded 1c Med';
      line-height: 1.5;
    }
    .email img {
      margin: 1px auto -5px auto;
      width: 25px;
      height: auto;
    }
    .email:hover img {
      filter: var(--coffee-hover);
    }
    .email a {
      margin: 2px auto;
      color: #000;
    }
    .email:hover a, .email:focus a {
      color: var(--coffee);
    }
    @media screen and (max-width: 900px) {
      .post-end {
        display: grid;
        grid-template-columns: auto auto;
        justify-content: space-around;
        place-items: center;
        gap: 0;
      }
      .share {
        grid-row: 1;
        grid-column: 2;
      }
    }
    @media screen and (max-width: 720px) {
      h1 {
        font-size: 1.35em;
      }
      article {
        margin-bottom: 3em;
      }
      div {
        display: grid;
        gap: 1em;
        grid-template-columns: auto auto;
        place-content: start;
        place-items: start;
        margin: 0 auto;
        padding: 0 auto;
      }
      .last-updated-on {
        margin: 0;
      }
      .updated {
        margin: 0;
      }
      .post-end {
        display: grid;
        grid-template-columns: auto;
        justify-content: center;
        place-items: center;
        margin: 0 auto 0.25em auto;
        gap: 0 0;
      }
      .coffee {
        grid-row: 1;
        grid-column: 1;
        margin: -1em auto 0.5em auto;
        width: auto;
      }
      .share {
        grid-row: 2;
        grid-column: 1;
        margin: 1.5em auto -0.5em auto;
        width: auto;
      }
      .umami {
        width: auto;
        margin: 0 auto 1em auto;
      }
      .questions {
        width: auto;
        margin: 0.5em auto 1em auto;
      }
    }
    </style>

<slot name="astro-social-share-css">
    <style is:global>
      .astro-social-share {
        margin: 1em auto;
        height: 24px;
      }
      .astro-social-share svg {
        filter: var(--share);
      }
      .astro-social-share svg:hover {
        filter: var(--coffee-hover);
      }
    </style>
  </slot>

  <article data-pagefind-body>
    <h1 class="title">{title}</h1>
    <hr />
    <div>
      <span class="tag"><a href={`/categories/${tags}`} data-umami-event="category-from-article"><button>{tags}</button></a></span>
      <span class="date" data-pagefind-ignore>
        <FormattedDate date={pubDate} />
        {
          updatedDate && (
            <div class="last-updated-on">
              updated
            </div>
            <span class="updated"><FormattedDate date={updatedDate} /></span>
          )
        }
      </span>
    </div>
    <p class="description">
      {description}
    </p>
    <slot>
      <p>
        If you're seeing this, something went wrong! Please try <em
          >reloading the page</em
        >.
      </p>
    </slot>
  </article>
  <aside class="post-end">
    <div class="coffee">
      <span>Was this article helpful?</span>
      <script
        type="text/javascript"
        src="https://cdnjs.buymeacoffee.com/1.0.0/button.prod.min.js"
        data-name="bmc-button"
        data-slug="arieldiaz"
        data-color="var(--info)"
        data-emoji="â˜•"
        data-font="Bree"
        data-text="Buy me a coffee"
        data-outline-color="var(--main)"
        data-font-color="#000000"
        data-coffee-color="#ffffff"
        data-umami-event="article-coffee">
      </script>
    </div>

    <div class="share">
      <span>Want to share this article?</span>
      <SocialShare
      description={description}
      title={title}
    />
    </div>

  </aside>
  <aside class="post-end">
    <div class="umami">
      <span>
        Want to see article stats?
      </span>
      <button class="stats">
        <span>
          <a 
            href={`https://us.umami.is/share/5MdOgBcRzVP6FU0x/fullmetalbrackets.com?view=url&url=/blog/${slug}/`}
            target="_blank" data-umami-event={`umami-stats-${slug}`}>
              <img src="/assets/umami.svg"
                class="umami"
                loading="lazy"
                decoding="async"
                alt="Umami Analytics"> Umami
          </a>
        </span>
      </button>
    </div>
    <div class="questions">
      <span>Have any questions?</span>
        <button class="email">
          <a 
            href={`mailto:contact@fullmetalbrackets.com?subject=RE: ${title}`}>
              <img src="/assets/email.svg"
                class="email"
                loading="lazy"
                decoding="async"
                alt="Email"> Email Me
          </a>
        </button>
    </div>
  </aside>
  <hr />
  <aside>
    <a href="#top" class="top button blog-tag">Back to Top &uarr;</a>
  </aside>
</BaseLayout>
