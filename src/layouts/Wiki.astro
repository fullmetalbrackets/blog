---
import type { CollectionEntry } from "astro:content";
import BaseLayout from "@layouts/BaseLayout.astro";
import FormattedDate from "@components/FormattedDate.astro";
import ScrollProgress from "@components/ScrollProgress.astro";
import BackToTop from "@components/BackToTop.astro";

type Props = CollectionEntry<"wiki">["data"];

const { title, description, tag, pubDate, updatedDate } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <head>
    <link rel="stylesheet" href="/prism.css" />
  </head>
  <style>
    h1 {
      margin: 1.1em 0 0 0;
    }
    hr {
      margin-top: 1em;
    }
    article {
      margin-top: 2em;
    }
    .tag {
      margin: 0.6em auto 1em auto;
    }
    .tag span {
      font-family: 'M Plus Rounded 1c Med', 'Atkinson', Monaco, Consolas, 'Andale Mono', 'Ubuntu Mono', monospace;
      background-color: var(--info);
      color: #000;
      border: 0;
      border-radius: 0.25em;
      padding: 4px 8px;
      font-weight: 600;
      font-size: 0.75em;
    }
    form {
      display: flex;
      align-items: center;
    }
    label {
      color: var(--text);
      margin-right: 1em;
    }
    .bottom-line {
      margin-top: 2em;
    }
    @media screen and (max-width: 667px) {
      .tag {
        margin: 1em auto;
      }
    }
  </style>

  <ScrollProgress />
  <article>
    <h1 class="title">{title}</h1>
    <p class="tag">
      <span>{tag}</span>
    </p>
    <div class="date">
      <FormattedDate date={pubDate} />
      {
        updatedDate && (
          <div class="last-updated-on">
            Last updated on <FormattedDate date={updatedDate} />
          </div>
        )
      }
    </div>
    <hr />
    <slot>
      <p>
        If you're seeing this, something went wrong! Please try <em
          >reloading the page</em
        >.
      </p>
    </slot>
  </article>
  <hr class="bottom-line" />
  <BackToTop />
</BaseLayout>
