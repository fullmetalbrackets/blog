---
import type { CollectionEntry } from 'astro:content';
import FormattedDate from './FormattedDate.astro';
import Icon from '@icons/chat-quote.svg';

type Props = CollectionEntry<'lifestream'>['data'] & {
  type: 'quote';
};

const { 
  quote,
  attribution,
  url,
  pubDate 
} = Astro.props;
---

<div class="quote-card">
  <blockquote data-type="quote" class=".blockquote-quote">
    <p>{quote}</p>
    {attribution && (
      <span class="quote-attribution">
        â€” {attribution} {url && (
          <a href={url} class="external-link" target="_blank" rel="noopener noreferrer" aria-label="external link">
          </a>
        )}
      </span>
    )}
  </blockquote>
  <span class="icon">
    <Icon width={24} height={24} />
  </span>
</div>
<span class="date"><FormattedDate date={pubDate} /></span>

<style>
  .quote-card {
    display: grid;
    color: var(--emphasis);
    padding: 0;
    margin: 0 auto;
    justify-content: center;
    place-items: center;
    gap: 0;
  }

  blockquote p:first-of-type {
    color: var(--text);
    font-size: 1em;
    line-height: 1.3;
    font-style: italic;
    font-weight: 300;
  }

  .quote-attribution {
    margin: 0.75em 1.5em -0.75em 0;
    font-size: 0.875em;
    text-align: right;
    font-family: var(--sub-font);
    color: var(--emphasis);
  }

  .quote-attribution a {
    font-size: 1.25em;
    margin: 0;
    padding: 0;
  }
  
  .date {
    display: block;
    font-size: 0.875em;
    margin: -1.25em 0 0 0.25em;
    padding: 0;
  }

  .icon {
    position: absolute;
    filter: var(--lifestream);
    right: 0.25em;
    bottom: 0.3em;
  }
</style>