---
import type { CollectionEntry } from 'astro:content';
import { Image } from 'astro:assets';
import FormattedDate from './FormattedDate.astro';
import Icon from '@icons/game.svg';

type Props = CollectionEntry<'lifestream'>['data'] & {
  type: 'game';
  index?: number;
  startDate: Date;
};

const { 
  title, 
  image, 
  index = 0,
  developer,
  publisher,
  platform,
  completed,
  note, 
  pubDate, 
  startDate, 
  genre,
  url 
} = Astro.props;

const isAboveFold = index < 6;
---

<div class="game-card">
  <div class="game-cover">
    {image && (
        <Image src={image} alt={title} loading={isAboveFold ? 'eager' : 'lazy'} inferSize />
    )}
    {!completed && (
      <span class="status-badge in-progress">Playing</span>
    )}
    {completed && (
      <span class="status-badge completed">Completed</span>
    )}
  </div>
  <div class="game-info">
    <h3 class="game-title">{title}</h3>
    {developer && <p class="game-developer"><span>Developed by</span> {developer}</p>}
    {publisher && <p class="game-publisher"><span>Published by</span> {publisher}</p>}
    <p class="release-date">
      <span>Released</span>
      <time datetime={startDate.toISOString()}>
        {startDate.toLocaleDateString('en-US', { 
          year: 'numeric', 
          month: 'numeric', 
          day: 'numeric' 
        })}
      </time>
    </p>
    {platform && <p class="game-platform">
      {platform.map((platform) => (
        <span>{platform}</span>
      ))}
    </p>}
    {genre && <span class="genre-tag">
      {genre.map((genre) => (
        <span class="genre">{genre}</span>
    ))}
    </span>}
    {note && <p class="note">{note}</p>}
    <div class="external-link">
      {url && (
        <a href={url} target="_blank" rel="noopener noreferrer" aria-label="external link">
          More information
        </a>
      )}
    </div>
  </div>
  <span class="icon">
    <Icon width={40} height={40} />
  </span>
</div>
<span class="date">
  <FormattedDate date={pubDate} />
</span>
<style>
  .date {
    display: block;
    font-size: 0.875em;
    margin: 0.25em 0 0 0.25em;
  }

  .external-link {
    margin-top: 0.75em;
    margin-bottom: 0.15em;
    font-size: 0.875rem;
    text-align: right;
    font-family: var(--sub-font);
    font-weight: 500;
  }

  .game-card {
    background: var(--code-bg);
    border-radius: 0.5em;
    overflow: hidden;
    width: 100%;
  }
  
  .game-info {
    padding: 1rem;
  }
  
  .game-title {
    margin: 0 0 0.5rem 0;
    line-height: 1.1;
    font-size: 1.25em;
    font-weight: 900;
    font-family: var(--sub-font);
    color: var(--emphasis);
  }
  
  .game-publisher,
  .game-developer {
    margin: 0;
    font-size: 0.875rem;
    font-style: italic;
    color: var(--secondary);
  }
  
  .game-developer span, .game-publisher span {
    color: var(--text);
  }

  .game-platform {
    display: flex;
    gap: 0.5em;
    color: var(--other);
    font-size: 0.875rem;
    font-family: var(--sub-font);
    text-decoration-line: underline;
    text-decoration-style: dotted;
    text-decoration-thickness: 1px;
    margin: 0;
  }

  .genre-tag {
    display: flex;
    padding: 0.25rem 0;
    font-size: 0.5em;
    margin-top: 0.5rem;
    gap: 0.25em;
  }
  
  .genre {
    font-family: var(--sub-font);
    background-color: var(--info);
    color: #000;
    border: 0;
    border-radius: 0.25em;
    padding: 4px 8px 3px 8px;
    font-weight: 700;
  }

  .icon {
    position: absolute;
    filter: var(--lifestream);
    right: 0.2em;
    bottom: 0.2em;
  }

  .note {
    margin-top: 0.75rem;
    margin-bottom: 0;
    font-size: 0.875em;
    font-weight: 300;
    line-height: 1.3;
  }
  
  .release-date {
    margin: -0.55em 0 -0.15em 0;
    padding: 0;
    font-family: var(--sub-font);
  }

  .release-date span, time {
    font-size: 0.5em;
    font-style: italic;
    margin: 0;
    padding: 0;
  }

  .release-date span {
    color: var(--text);
  }
  
  .status-badge {
    position: absolute;
    top: 2rem;
    right: 0.5rem;
    padding: 0.25rem 0.75rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
  }
  
  .status-badge.in-progress {
    background: #ffc107;
    color: #000;
    font-family: var(--sub-font);
    font-weight: 900;
  }
  
  .status-badge.completed {
    background: #28a745;
    color: white;
    font-family: var(--sub-font);
    font-weight: 900;
  }

  time {
    color: var(--primary);
  }
</style>