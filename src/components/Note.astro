---
import type { CollectionEntry } from 'astro:content';
import FormattedDate from './FormattedDate.astro';
import Icon from '@icons/note.svg';

type Props = CollectionEntry<'lifestream'>['data'] & {
  type: 'note';
};

const { 
  note,
  title,
  url,
  tag,
  pubDate 
} = Astro.props;
---

<div class="note-card">
  {title && <h3 class="note-title">{title}</h3>}
  <p class="note">{note}</p>
  <div class="info">
    <span class="tag">{tag}</span>
    <span class="external-link">
      {url && (
        <a href={url} target="_blank" rel="noopener noreferrer" aria-label="external link">
          Read more
        </a>
      )}
    </span>
  </div>
  <span class="icon">
    <Icon width={32} height={32} />
  </span>
</div>
<span class="date"><FormattedDate date={pubDate} /></span>

<style>
  .date {
    display: block;
    font-size: 0.875em;
    margin: 0.25em 0 0 0.25em;
  }
  
  .external-link {
    font-size: 0.875rem;
    font-family: var(--sub-font);
    font-weight: 500;
  }

  .icon {
    position: absolute;
    filter: var(--lifestream);
    right: 0.2em;
    bottom: 0.2em;
  }

  .info {
    display: flex;
    justify-content: space-between;
    margin: 0 auto 0.5em auto;
    font-size: 0.875rem;
  }

  .note-card {
    background: var(--blockquote);
    padding: 0.5em 1em 0.5em 1em;
    line-height: 1.2;
    min-width: min-content;
    width: 100%;
    max-width: 100%;
  }

  .note-title {
    margin: 0;
    font-size: 1.25em;
    font-weight: 800;
    color: var(--emphasis);
  }

  .note {
    margin: 0 auto 1em auto;
    line-height: 1.3;
    font-size: 0.75em;
    font-family: var(--sub-font);
    font-weight: 300;
    font-style: italic;
  }

  .tag {
    font-family: var(--sub-font);
    background-color: var(--info);
    color: #000;
    border: 0;
    border-radius: 0.25em;
    padding: 5px 8px 4px 8px;
    font-weight: 700;
    font-size: 0.75em;
  }
</style>