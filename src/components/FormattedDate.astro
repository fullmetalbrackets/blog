---
interface Props {
  date: Date;
}

const { date } = Astro.props;
---

<style scoped>
  time {
    font-size: 1em;
    font-weight: 700;
  }
</style>

<time datetime={date?.toISOString()}>
  {
    date?.toLocaleDateString("en-us", {
      year: "numeric",
      month: "long",
      day: "numeric",
    })
  }
</time>
