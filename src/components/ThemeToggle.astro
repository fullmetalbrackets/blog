<style>
  .theme-toggle {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5em;
    display: flex;
    align-items: center;
    color: var(--primary);
    transition: color 0.15s ease-out;
    margin-left: -0.385em;
  }
  .theme-toggle:hover {
    color: var(--hover);
  }
  .theme-toggle:focus-visible {
    outline: 2px solid var(--primary);
    outline-offset: 2px;
    border-radius: 2px;
  }
  .theme-toggle svg {
    width: 20px;
    height: 20px;
    fill: currentColor;
    margin: 0;
    padding: 0;
  }
  .sun-icon,
  .moon-icon {
    display: none;
  }
  html:not(.dark) .sun-icon,
  html.dark .moon-icon {
    display: block;
  }
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }
  @media (hover: none) {
    .theme-toggle:hover,
    .theme-toggle:active {
      color: var(--primary);
      transform: none;
    }
  }
  @media (prefers-reduced-motion: reduce) {
    .theme-toggle {
      transition: none;
    }
  }
</style>

<button 
  class="theme-toggle" 
  id="theme-toggle" 
  type="button"
  aria-label="Toggle dark mode"
  onclick="window.toggleTheme()"
>
