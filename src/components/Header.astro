---
import NavLink from '@components/NavLink.astro';
import { SITE_TITLE } from '@config';
---

<head>
</head>
<header>
	<div>
		<span class="logo">
		{SITE_TITLE}
		</span>
	</div>
	<nav>
		<NavLink href="/">Home</NavLink>
		<NavLink href="/posts">Blog</NavLink>
		<NavLink href="/notes">Notes</NavLink>
		<NavLink href="/tags">Tags</NavLink>
		<NavLink href="/links">Links</NavLink>
		<NavLink href="/search"><img src="/img/assets/search.svg" height="24px" width="24px" class="search" alt="Search"></NavLink>
	</nav>
</header>
<style>
	header {
		margin: 0.5em 0;
	}
	header div {
		display: grid;
		margin: 0;
		padding: 0;
	}
	nav {
		font-family: 'M PLUS Rounded 1c Med', 'Wotfard', sans-serif;
		display: flex;
		margin: 1em auto 0 auto;
		justify-content: space-between;
		align-items: center;
	}
	.search {
		margin: 0;
		padding: 0;
		height: 24px;
		width: 24px;
		filter: var(--search);
	}
	.theme {
		margin: 0;
		padding: 0;
	}
	.logo {
		font-family: 'Streamster';
		font-size: 4em;
		font-weight: 700;
		margin: 0 0 0 22px;
		color: var(--name);
	}
	@media screen and (min-width: 200px) and (max-width: 667px) {
		.logo {
			display: flex;
			font-size: 2.75em;
			margin-top: 10px;
			margin-bottom: 10px;
			
		}
		nav {
			margin: 0.25em auto 0 auto;
			font-size: 18px;
		}
		.search {
			height: 20px;
			width: 20px;
		}
</style>