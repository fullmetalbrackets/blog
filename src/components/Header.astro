---
import HeaderLink from "./HeaderLink.astro";
import { Picture } from 'astro:assets';
import Logo from '../img/assets/logo.avif';
import Search from '@icons/search.svg';
---

<style scoped>
  header {
    margin: 0 auto;
  }
  nav {
    font-family: var(--sub-font);
    font-weight: 700;
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 77.1ch;
    margin: 0 auto;
    padding: 0 auto;
  }
  nav a {
    color: var(--primary);
    text-decoration: none;
    border: 2px solid transparent;
  }
  nav a:hover {
    color: var(--hover);
  }
  nav a.active {
    color: var(--hover);
    border-bottom: 2px solid var(--menu);
  }
  .logo {
    display: flex;
    align-items: center;
    margin: 0;
    padding: 0;
    border-bottom: 2px solid transparent;
  }
  img {
    margin: 0;
    padding: 0;
    border: 0;
  }
  .name {
    margin-left: 2px; 
    font-size: xx-large;
    color: var(--primary);
  }
  .logo:hover .name {
    color: var(--hover);
    border: 0;
  }
  .nav-links {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 0.25em;
  }
  .search {
    filter: var(--search);
  }
  svg {
    margin: 2.8px 0;
  }
  @media screen and (min-width: 200px) and (max-width: 667px) {
    .name {
      font-size: 0;
      visibility: hidden;
    }
  }
</style>

<header>
  <nav>
    <a href="/" class="logo" aria-label="logo">
      <Picture src={Logo} formats={['avif', 'webp']} alt="Site logo." width={50} height={50} loading="eager" decoding="async" />
        <span class="name">Fullmetalbrackets</span>
    </a>
    <div class="nav-links">
      <HeaderLink href="/blog/" rel="prefetch-intent" class="nav-link">Blog</HeaderLink>
      <HeaderLink href="/wiki/" rel="prefetch-intent" class="nav-link" data-umami-event="wiki">Wiki</HeaderLink>
      <HeaderLink href="/links/" rel="prefetch-intent" class="nav-link" data-umami-event="links">Links</HeaderLink>
      <HeaderLink href="/search/" rel="prefetch-intent" class="search-link" data-umami-event="search">
        <Search />
      </HeaderLink>
    </div>
  </nav>
</header>