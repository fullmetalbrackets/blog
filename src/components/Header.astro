---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "@consts";
---

<header>
  <div>
    <span class="logo">
      {SITE_TITLE}
    </span>
  </div>
  <nav>
    <HeaderLink href="/" rel="prefetch-intent">Home</HeaderLink>
    <HeaderLink href="/blog" rel="prefetch-intent">Blog</HeaderLink>
    <HeaderLink href="/links" rel="prefetch-intent">Links</HeaderLink>
    <HeaderLink href="/about" rel="prefetch-intent">About</HeaderLink>
    <HeaderLink href="/uses" rel="prefetch-intent">Uses</HeaderLink>
    <HeaderLink href="/search" rel="prefetch-intent" class="search-link">
      <img
        src="/img/assets/search.svg"
        height="24px"
        width="24px"
        class="search"
        alt="Search"
      />
    </HeaderLink>
  </nav>
</header>
<style>
  header {
    margin: 0.5em 0;
  }
  header div {
    display: grid;
    margin: 0;
    padding: 0;
  }
  nav {
    display: flex;
    margin: 1em auto 0 auto;
    justify-content: space-between;
    align-items: center;
  }
  .search {
    margin: 0;
    padding: 0;
    height: 24px;
    width: 24px;
    filter: var(--search);
  }
  .theme {
    margin: 0;
    padding: 0;
  }
  .logo {
    font-family: "Streamster";
    font-size: 4em;
    font-weight: 700;
    margin: 0 0 0 22px;
    color: var(--name);
  }
  @media screen and (min-width: 200px) and (max-width: 667px) {
    .logo {
      display: flex;
      font-size: 2.75em;
      margin-top: 10px;
      margin-bottom: 10px;
    }
    nav {
      justify-content: space-around;
      margin: 0.25em auto 0 auto;
      font-size: 18px;
    }
    .search {
      height: 20px;
      width: 20px;
    }
  }
</style>
