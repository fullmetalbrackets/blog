---
import NavLink from './NavLink.astro';
import Theme from './Theme.astro';
import { SITE_TITLE } from '../config';
---

<head>
</head>
<header>
	<div>
		<span class="logo">
		{SITE_TITLE}
		</span>
	</div>
		<nav>
		<NavLink href="/">Posts</NavLink>
		<NavLink href="/tags">Tags</NavLink>
		<NavLink href="/about">About</NavLink>
		<NavLink href="/search"><img src="/img/assets/search.svg" class="search" alt="Search"></NavLink>
		<Theme />
	</nav>
</header>
<style>
	header {
		margin: 0.5em 0;
	}
	header div {
		display: grid;
		margin: 0;
		padding: 0;
	}
	nav {
		display: inline-flex;
		margin: 0;
		align-items: center;
	}
	.search {
		margin: 0;
		padding: 0;
		filter: var(--search);
	}
	.theme {
		margin: 0;
		padding: 0;
	}
	.logo {
		font-family: 'Streamster';
		font-size: 4em;
		font-weight: 700;
		margin: 0 0 0 26px;
		color: var(--name);
	}
	@media screen and (min-width: 200px) and (max-width: 650px) {
		.logo {
			font-size: 3.5em;
		}
	}
</style>