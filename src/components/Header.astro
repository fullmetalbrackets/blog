---
import HeaderLink from "./HeaderLink.astro";
import ThemeToggle from "./ThemeToggle.astro";
import { Picture } from 'astro:assets';
import Logo from '../img/assets/logo.avif';
import Search from '@icons/search.svg';
---

<style scoped>
  header {
    margin: 0 auto;
  }
  .skip-link {
    position: absolute;
    left: -9999px;
    top: auto;
    width: 1px;
    height: 1px;
    overflow: hidden;
    z-index: 100;
  }
  .skip-link:focus {
    position: fixed;
    top: 0;
    left: 0;
    width: auto;
    height: auto;
    overflow: visible;
    background: var(--primary);
    color: var(--main);
    padding: 0.5em 1em;
    text-decoration: none;
    border-radius: 0 0 4px 0;
  }
  nav {
    font-family: var(--sub-font);
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 77.1ch;
    margin: 0 auto;
    padding: 0 auto;
    font-weight: 500;
    height: 1.75em;
  }
  nav a {
    color: var(--primary);
    text-decoration: none;
    border: 2px solid transparent;
  }
  nav a:hover {
    color: var(--hover);
  }
  nav a:focus-visible {
    outline: 2px solid var(--primary);
    outline-offset: 2px;
    border-radius: 2px;
  }
  nav a.active {
    color: var(--hover);
    border-bottom: 2px solid var(--hover);
  }
  .logo {
    display: flex;
    align-items: center;
    margin: 0;
    padding: 0;
    font-weight: 900;
  }
  img {
    margin: 0;
    padding: 0;
    border: 0;
  }
  .name {
    margin: 0;
    padding: 0;
    font-size: 32px;
    color: var(--primary);
    border: 0;
  }
  .name::before {
    content: "Fullmetalbrackets"
  }
  .logo {
    margin: 0;
    padding: 0;
    border: 0;
    height: auto;
    width: auto;
  }
  .logo:hover .name {
    color: var(--hover);
    border: 0;
    transition: all .175s ease-out;
  }
  .nav-links {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 0.25em;
  }
  .search {
    filter: var(--search);
  }
  .dropdown {
    position: relative;
    display: inline-block;
  }
  .dropdown-toggle {
    background: none;
    border: 2px solid transparent;
    color: var(--primary);
    cursor: pointer;
    font-family: var(--sub-font);
    font-size: 1em;
    font-weight: 500;
    padding: 0;
  }
  .dropdown-toggle:active {
    color: var(--hover);
  }
  .dropdown-toggle:hover {
    color: var(--hover);
  }
  .dropdown-toggle:focus-visible {
    outline: 2px solid var(--primary);
    outline-offset: 2px;
    border-radius: 2px;
  }
  .dropdown-content {
    position: absolute;
    right: 0;
    background-color: rgb(from var(--code-bg, var(--code-bg)) r g b / 0.75);
    min-width: 148px;
    z-index: 1;
    border-radius: 0.5em;
    padding: 0;
    backdrop-filter: blur(0.1em);
    -webkit-backdrop-filter: blur(0.1em);
    opacity: 0;
    transform: translateY(-10px);
    transition: opacity 0.25s ease, transform 0.25s ease, visibility 0s 0.25s;
    pointer-events: none;
    visibility: hidden;
  }
  .dropdown-content a {
    color: var(--primary);
    padding: 0.25em;
    text-decoration: none;
    display: block;
    border: none;
    text-align: right;
  }
  .dropdown-content a:last-of-type {
    border-radius: 0 0 0.5em 0.5em;
  }
  .dropdown-content a:hover {
    background-color: rgb(from var(--accent, var(--accent)) r g b / 0.5);
    color: var(--hover);
    transition: none;
  }
  .dropdown-content a:hover:first-of-type {
    border-radius: 0.5em 0.5em 0 0;
  }
  .dropdown-content a:hover:last-of-type {
    border-radius: 0 0 0.5em 0.5em;
  }
  .dropdown.open .dropdown-content {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
    visibility: visible;
    transition: opacity 0.25s ease, transform 0.25s ease;
  }
  .dropdown.open .dropdown-toggle {
    color: var(--link);
  }
  .chevron {
    display: inline-block;
    vertical-align: middle;
    filter: var(--chevron-filter, none);
  }
  @media screen and (max-width: 720px) {
    .name::before {
      content: ""
    }
  }
</style>

<a href="#main-content" class="skip-link">Skip to main content</a>

<header>
  <nav aria-label="Main navigation">
    <a href="/" class="logo" aria-label="Fullmetalbrackets home">
      <Picture src={Logo} formats={['avif', 'webp']} alt="" width={50} height={47} loading="eager" decoding="async" />
        <span class="name" aria-hidden="true"></span>
    </a>
    <div class="nav-links">
      <HeaderLink href="/blog/" rel="prefetch-intent" class="nav-link" data-umami-event="nav-blog">Blog</HeaderLink>
      <HeaderLink href="/links/" rel="prefetch-intent" class="nav-link" data-umami-event="nav-links">Links</HeaderLink>
    <div class="dropdown">
      <span class="dropdown-toggle" aria-expanded="false" aria-haspopup="true">
        More
        <svg class="chevron" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <polyline points="6 9 12 15 18 9"></polyline>
        </svg>
      </span>
      <div class="dropdown-content">
        <HeaderLink href="/wiki/" rel="prefetch-intent" data-umami-event="nav-wiki">Wiki</a>
        <HeaderLink href="/colophon/" rel="prefetch-intent" data-umami-event="nav-colophon">Colophon</a>
        <HeaderLink href="/blogroll/" rel="prefetch-intent" data-umami-event="nav-blogroll">Blogroll</a>
        <HeaderLink href="/self-hosted/" rel="prefetch-intent" data-umami-event="nav-style">Self-hosted</a>
        <HeaderLink href="/uses/" rel="prefetch-intent" data-umami-event="nav-uses">Uses</a>
        <HeaderLink href="/style/" rel="prefetch-intent" data-umami-event="nav-style">Style</a>
        <HeaderLink href="/verify/" rel="prefetch-intent" data-umami-event="nav-verify">Verify</a>
      </div>
    </div>
      <HeaderLink href="/search/" rel="prefetch-intent" class="search-link" data-umami-event="search" aria-label="Search">
        <Search aria-hidden="true" />
        <span class="sr-only">Search</span>
      </HeaderLink>
      <ThemeToggle />
    </div>
  </nav>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const dropdown = document.querySelector('.dropdown');
    const toggle = document.querySelector('.dropdown-toggle') as HTMLButtonElement | null;
    
    if (dropdown && toggle) {
      toggle.addEventListener('click', (e) => {
        e.stopPropagation();
        dropdown.classList.toggle('open');
        const isOpen = dropdown.classList.contains('open');
        toggle.setAttribute('aria-expanded', isOpen.toString());
      });

      document.addEventListener('click', (e) => {
        if (!dropdown.contains(e.target as Node)) {
          dropdown.classList.remove('open');
          toggle.setAttribute('aria-expanded', 'false');
        }
      });

      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && dropdown.classList.contains('open')) {
          dropdown.classList.remove('open');
          toggle.setAttribute('aria-expanded', 'false');
          toggle.focus();
        }
      });
    }
  });
</script>