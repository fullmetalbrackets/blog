---
import NavLink from './NavLink.astro';
import Theme from './Theme.astro';
import { SITE_TITLE } from '../config';
---

<head>
</head>
<header>
	<div>
		<span class="logo">
		{SITE_TITLE}
		</span>
	</div>
		<nav>
		<NavLink href="/" rel="prefetch">Posts</NavLink>
		<NavLink href="/tags">Tags</NavLink>
		<NavLink href="/about">About</NavLink>
		<NavLink href="/search"><img src="/img/assets/search.svg" height="24px" width="24px" class="search" alt="Search"></NavLink>
		<Theme />
	</nav>
</header>
<style>
	header {
		margin: 0.5em 0;
	}
	header div {
		display: grid;
		margin: 0;
		padding: 0;
	}
	nav {
		font-family: 'M PLUS Rounded 1c Med', 'Wotfard', sans-serif;
		display: flex;
		margin: 1em auto 0 auto;
		justify-content: space-between;
		align-items: center;
	}
	.search {
		margin: 0;
		padding: 0;
		height: 24px;
		width: 24px;
		filter: var(--search);
	}
	.theme {
		margin: 0;
		padding: 0;
	}
	.logo {
		font-family: 'Streamster';
		font-size: 4em;
		font-weight: 700;
		margin: 0 0 0 26px;
		color: var(--name);
	}
	@media screen and (min-width: 200px) and (max-width: 650px) {
		.logo {
			display: flex;
			font-size: 2.8em;
			margin-top: 10px;
			margin-bottom: 10px;
		}
		nav {
			margin: 0;
			justify-content: space-around;
		}
</style>