---
import HeaderLink from "./HeaderLink.astro";
import ThemeToggle from "./ThemeToggle.astro";
import { Picture } from 'astro:assets';
import Logo from '../img/assets/logo.avif';
import Search from '@icons/search.svg';
---

<style scoped>
  header {
    margin: 0 auto;
  }
  .skip-link {
    position: absolute;
    left: -9999px;
    top: auto;
    width: 1px;
    height: 1px;
    overflow: hidden;
    z-index: 100;
  }
  .skip-link:focus {
    position: fixed;
    top: 0;
    left: 0;
    width: auto;
    height: auto;
    overflow: visible;
    background: var(--primary);
    color: var(--main);
    padding: 0.5em 1em;
    text-decoration: none;
    border-radius: 0 0 4px 0;
  }
  nav {
    font-family: var(--sub-font);
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 77.1ch;
    margin: 0 auto;
    padding: 0 auto;
    font-weight: 500;
  }
  nav a {
    color: var(--primary);
    text-decoration: none;
    border: 2px solid transparent;
  }
  nav a:hover {
    color: var(--hover);
  }
  nav a:focus-visible {
    outline: 2px solid var(--primary);
    outline-offset: 2px;
    border-radius: 2px;
  }
  nav a.active {
    color: var(--hover);
    border-bottom: 2px solid var(--hover);
  }
  .logo {
    display: flex;
    align-items: center;
    margin: 0;
    padding: 0;
    border-bottom: 2px solid transparent;
    font-weight: 900;
  }
  img {
    margin: 0;
    padding: 0;
    border: 0;
  }
  .name {
    margin-left: 2px; 
    font-size: xx-large;
    color: var(--primary);
  }
  .logo:hover .name {
    color: var(--hover);
    border: 0;
    transition: all .175s ease-out;
  }
  .nav-links {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 0.25em;
  }
  .search {
    filter: var(--search);
  }
  svg {
    margin: 2.8px 0;
  }
  @media screen and (max-width: 667px) {
    .name {
      font-size: 0;
      visibility: hidden;
    }
  }
</style>

<a href="#main-content" class="skip-link">Skip to main content</a>

<header>
  <nav aria-label="Main navigation">
    <a href="/" class="logo" aria-label="Fullmetalbrackets home">
      <Picture src={Logo} formats={['avif', 'webp']} alt="" width={50} height={50} loading="eager" decoding="async" />
        <span class="name" aria-hidden="true">Fullmetalbrackets</span>
    </a>
    <div class="nav-links">
      <HeaderLink href="/blog/" rel="prefetch-intent" class="nav-link">Blog</HeaderLink>
      <HeaderLink href="/wiki/" rel="prefetch-intent" class="nav-link" data-umami-event="wiki">Wiki</HeaderLink>
      <HeaderLink href="/links/" rel="prefetch-intent" class="nav-link" data-umami-event="links">Links</HeaderLink>
      <HeaderLink href="/search/" rel="prefetch-intent" class="search-link" data-umami-event="search" aria-label="Search">
        <Search aria-hidden="true" />
        <span class="sr-only">Search</span>
      </HeaderLink>
      <ThemeToggle />
    </div>
  </nav>
</header>