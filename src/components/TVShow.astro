---
import type { CollectionEntry } from 'astro:content';
import { Image } from 'astro:assets';
import FormattedDate from './FormattedDate.astro';
import Icon from '@icons/tvshow.svg';

type Props = CollectionEntry<'lifestream'>['data'] & {
  type: 'tvshow';
  index?: number;
};

const { 
  title, 
  image, 
  index = 0,
  inProgress, 
  note, 
  pubDate,
  genre,
  seasons,
  startDate,
  endDate,
  url 
} = Astro.props;

const isAboveFold = index < 6;
---

<div class="tvshow-card">
  <div class="tvshow-poster">
    {image && (
      <div class="book-cover">
        <Image src={image} alt={title} loading={isAboveFold ? 'eager' : 'lazy'} inferSize />
      </div>
    )}
    {inProgress && (
      <span class="status-badge in-progress">In Progress</span>
    )}
    {!inProgress && (
      <span class="status-badge completed">Finished</span>
    )}
  </div>
  <div class="tvshow-info">
    <h3 class="tvshow-title">{title}</h3>
    {(startDate || endDate) && (
      <p class="watch-period">
        <span class="seasons">
          {seasons && `${seasons} Seasons`}
        </span>
        <span class="airdates">
          {startDate && startDate.toLocaleDateString()}
          {startDate && endDate && <span> - </span>}
          {endDate && endDate.toLocaleDateString()}
        </span>
      </p>
    )}
    {genre && <span class="genre-tag">
      {genre.map((genre) => (
        <span class="genre">{genre}</span>
    ))}
    </span>}
    {note && <p class="note">{note}</p>}
    <div class="external-link">
      {url && (
        <a href={url} target="_blank" rel="noopener noreferrer" aria-label="external link">
          More information
        </a>
      )}
    </div>
  </div>
  <span class="icon">
    <Icon width={36} height={36} />
  </span>
</div>
<span class="date"><FormattedDate date={pubDate} /></span>

<style>
  .date {
    display: block;
    font-size: 0.875em;
    margin: 0.25em 0 0 0.25em;
  }

  .external-link {
    margin-top: 0.75em;
    font-size: 0.875rem;
    text-align: right;
    font-family: var(--sub-font);
    font-weight: 500;
  }

  .genre {
    font-family: var(--sub-font);
    background-color: var(--info);
    color: #000;
    border: 0;
    border-radius: 0.25em;
    padding: 4px 8px 3px 8px;
    font-weight: 700;
  }

  .genre-tag {
    display: flex;
    padding: 0.25rem 0;
    font-size: 0.5em;
    margin-top: 0.5rem;
    gap: 0.25em;
  }

  hr {
    margin: 0 0 0.5em 0;
    padding: 0;
    border-color: var(--border);
  }

  .icon {
    position: absolute;
    filter: var(--lifestream);
    right: 0.2em;
    bottom: 0.1em;
  }
  
  .note {
    margin-top: 0.75rem;
    margin-bottom: 0;
    font-size: 0.875em;
    font-weight: 300;
    line-height: 1.3;
  }

  .status-badge {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    padding: 0.25rem 0.75rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
  }
  
  .status-badge.in-progress {
    background: #28a745;
    color: white;
  }
  
  .status-badge.completed {
    background: #a72828;
    color: white;
  }
  
  .tvshow-card {
    background: var(--code-bg);
    border-radius: 0.5em;
    overflow: hidden;
    width: 100%;
  }
  
  .tvshow-poster {
    position: relative;
    width: 100%;
    aspect-ratio: 2/3;
    overflow: hidden;
  }
  
  .tvshow-poster img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }
  
  .tvshow-info {
    padding: 0.25em 1rem 1.1rem 1rem;
  }
  
  .tvshow-title {
    margin: 0;
    line-height: 1.1;
    font-size: 1.25em;
    font-weight: 900;
    font-family: var(--sub-font);
    color: var(--emphasis);
  }
  
  .watch-period {
    display: flex;
    justify-content: space-between;
    margin: 0.75em 0 0 0;
    font-size: 0.75rem;
    font-style: italic;
    color: var(--secondary);
  }

  .watch-period .airdates {
    color: var(--primary);
  }

  .watch-period .seasons {
    color: var(--secondary)
  }
</style>