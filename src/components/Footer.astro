---
const today = new Date();
---

<style scoped>
  footer {
    font-family:
      "M Plus Rounded 1c Reg",
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
    margin: 0 auto 1em auto;
    padding: 0 auto;
    display: grid;
    grid-template-columns: auto auto;
    place-items: center;
    justify-content: space-between;
    gap: 0;
    max-width: 78.25ch;
  }
  .top-row {
    display: grid;
    grid-template-columns: auto auto;
    place-items: center;
    justify-content: space-between;
    gap: 0;
    margin: 0 auto;
    padding: 0 auto;
  }
  .legal {
    font-size: 14px;
    font-weight: 700;
  }
  .bottom-row {
    font-size: 14px;
    margin: 0 auto 1em auto;
    padding: 0 auto;
    font-weight: 700;
  }
  .mit {
    margin-left: 2em;
  }
  .privacy {
    font-size: 14px;
    font-weight: 700;
    margin: -1em auto 0 auto;
  }
  .nav {
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    margin: 0 0 0.25em 0;
    padding: 0;
  }
  .nav a {
    margin: 0 5px;
    padding: 5px;
  }
  .nav a:hover {
    filter: var(--ext);
  }
  img {
    filter: var(--svg);
    width: 25px;
    height: 25px;
    margin: 1px 2px;
    padding: 0;
    border-radius: 0;
  }
  .rss {
    width: 15px;
    height: 15px;
  }
  .mail {
    width: 25px;
    height: 25px;
  }
  .mastodon {
    width: 20px;
    height: 20px;
  }
  .bsky {
    filter: var(--svg);
    width: 24px;
    height: auto;
  }
  .gh {
    width: 20px;
    height: 20px;
  }
  .buymeacoffee {
    width: auto;
    height: 25px;
  }
  @media screen and (min-width: 200px) and (max-width: 667px) {
    footer {
      display: grid;
      place-items: center;
      grid-template-columns: 1fr;
      grid-template-rows: auto auto auto auto;
    }
    .legal {
      grid-row: 1;
      margin: 0 auto 0.5em auto;
    }
    .nav {
      grid-row: 2;      
      margin: 0 auto 0.5em auto;
    }
    .bottom-row {
      grid-row: 3;
      margin: 0 auto;
      margin: 0 auto 1em auto;
    }
    .privacy {
      grid-row: 4;
      margin: 0 auto 1em auto;
    }
  }
</style>

