---
const today = new Date();
import Umami from '@icons/umami.svg';
import Feed from '@icons/rss.svg';
import Email from '@icons/email.svg';
import Mastodon from '@icons/mastodon.svg';
import Bluesky from '@icons/bsky.svg';
import GitHub from '@icons/gh.svg';
import BuyMeCoffee from '@icons/bmc.svg';
import Top from '@icons/arrow-up.svg';
import Proven from '@icons/proven.svg';
---

<style>
  footer {
    background: var(--tertiary);
    margin: 0 auto;
    padding: 1em 0;
    display: grid;
    place-items: center;
    justify-content: space-around;
    gap: 0;
  }
  .icons {
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    margin: 0 auto;
    padding: 0 auto;
    gap: 1em;
  }
  .icons a:hover {
    filter: var(--ext);
    transition: none;
  }
  .icons svg {
    filter: var(--svg);
    border-radius: 0;
  }
  nav {
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    justify-content: space-evenly;
    place-items: center;
    gap: 0.5em;
    font-family: var(--sub-font);
    font-weight: 500;
    font-size: 0.75em;
    margin: 0 auto;
  }
  nav button {
    width: 95px;
    background: var(--foot-link);
  }
  nav button:hover {
    background: var(--foot-hover);
  }
  nav a {
    color: #000;
  }
  nav button:hover a {
    color: var(--foot-active);
  }
  nav a:active {
    color: var(--foot-active);
  }
  .nav-row-1 {
    gap: 20em;
    margin-top: -1.675em;
  }
  .nav-row-2 {
    margin-top: 0.5em;
  }
  .legal {
    display: flex;
    justify-content: space-between;
    font-family: var(--sub-font);
    font-weight: 500;
    font-size: 0.6em;
    margin: 1em auto 0 auto;
    padding: 0 1em;
    gap: auto;
    width: 100%;
  }
  .copyright {
    justify-content: center;
    font-family: var(--sub-font);
    font-weight: 500;
    font-size: 0.6em;
    margin: -1.55em auto 0 auto;
    padding: 0;
  }
  .badges {
    display: flex;
    justify-content: space-between;
    place-items: center;
    margin: 0.75em auto 0 auto;
    padding: 0 0.5em 0 0;
    gap: 0;
    width: 100%;
  }
  .badges * {
    margin: 0 auto;
    padding: 0;
  }
  .proof svg {
    filter: currentColor;
  }
  .top {
    filter: var(--foot-svg);
  }
  .top:hover {
    filter: var(--foot-ext);
    transition: all .2s ease-out;
  }
  .proof:hover {
    animation: wiggle 0.5s ease-in-out infinite;
  }
  .proof:not(:hover) {
    animation: none;
  }
  @media screen and (max-width: 667px) {
    .badges {
      gap: 0;
      padding: 0;
    }
    .copyright {
      margin: 1em auto 0 auto;
    }
    .nav-row-1 {
      gap: 1.35em;
      margin-top: 0.5em;
    }
  }
</style>

<footer>
