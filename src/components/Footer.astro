      <Umami height={25} width={25} />
    </a>
    <a href="/rss.xml" target="_blank" data-umami-event="footer-rss">
      <Feed height={20} width={20} />
    </a>
    <a href="mailto:contact@fullmetalbrackets.com" target="_blank" data-umami-event="footer-mail">
      <Email height={28} width={28} class="email" />
