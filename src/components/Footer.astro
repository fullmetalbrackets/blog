---
const today = new Date();
---

<style scoped>
  footer {
    font-family:
      "M Plus Rounded 1c Reg",
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
    margin: 2em auto 0 auto;
    padding: 0;
    display: flex;
    text-align: center;
    align-items: center;
    justify-content: space-between;
    max-width: 78ch;
  }
  .legal, .privacy {
    font-size: 14px;
  }
  .nav {
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    margin: 0;
    padding: 0;
  }
  .nav a {
    margin: 0 5px;
    padding: 5px;
  }
  .nav a:hover {
    filter: var(--ext);
  }
  img {
    filter: var(--svg);
    height: 20px;
    width: 20px;
    margin: 1px 2px;
    padding: 0;
    border-radius: 0;
  }
  .rss {
    width: 15px;
    height: 15px;
  }
  .mail {
    width: 20px;
    height: 20px;
  }
  .threads {
    width: 20px;
    height: 20px;
  }
  .bsky {
    filter: var(--svg);
    width: 20px;
    height: 20px;
  }
  .gh {
    width: 20px;
    height: 20px;
  }
  .buymeacoffee {
    width: 15px;
    height: 22px;
  }
  @media screen and (min-width: 200px) and (max-width: 667px) {
    .nav a {
      margin: 0 5px;
      padding: 5px 1px;
    }
  }
</style>

<footer>
  <div class="legal">
     &copy; 2021 - {today.getFullYear()} Ariel Diaz. All rights reserved.
  </div>
  </div>
  <div class="nav">
    <a href="/rss.xml"
      ><img
        height="15px"
        width="15px"
        class="rss"
        src="/assets/rss.svg"
        alt="RSS Feed"
        title="RSS Feed"
        loading="lazy"
        decoding="async"
      /></a
    >
    <a href="mailto:contact@fullmetalbrackets.com" target="_blank"
      ><img
        height="20px"
        width="20px"
        class="email"
        src="/assets/email.svg"
        alt="Email"
        title="Email"
        loading="lazy"
        decoding="async"
      /></a
    >
    <a href="https://threads.net/@fullmetal.brackets" target="_blank"
      ><img
        height="20px"
        width="20px"
        class="threads"
        src="/assets/threads.svg"
        alt="GitHub"
        title="Threads"
        loading="lazy"
        decoding="async"
      /></a
    >
    <a href="https://bsky.app/profile/fullmetalbrackets.bsky.social" target="_blank"
      ><img
        height="20px"
        width="20px"
        class="bsky"
        src="/assets/bsky.svg"
        alt="Bluesky"
        title="Bluesky"
        loading="lazy"
        decoding="async"
      /></a
    >
    <a href="https://github.com/fullmetalbrackets" target="_blank"
      ><img
        height="20px"
        width="20px"
        class="github"
        src="/assets/gh.svg"
        alt="GitHub"
        title="GitHub"
        loading="lazy"
        decoding="async"
      /></a
    >
    <a href="https://buymeacoffee.com/arieldiaz" target="_blank"
      ><img
        height="21px"
        width="15px"
        class="buymeacoffee"
        src="/assets/bmc-logo.svg"
        alt="Buy Me A Coffee"
        title="Buy Me A Coffee"
        loading="lazy"
        decoding="async"
      /></a
    >
  </div>
</footer>