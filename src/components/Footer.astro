---
const today = new Date();
import Umami from '@icons/umami.svg';
import Feed from '@icons/rss.svg';
import Email from '@icons/email.svg';
import Mastodon from '@icons/mastodon.svg';
import Bluesky from '@icons/bsky.svg';
import GitHub from '@icons/gh.svg';
import BuyMeCoffee from '@icons/bmc.svg';
---

<style scoped>
  footer {
    font-family: var(--sub-font);
    margin: 0 auto 1em auto;
    padding: 0 auto;
    display: grid;
    grid-template-columns: auto auto;
    place-items: center;
    justify-content: space-between;
    gap: 0;
    max-width: 78.25ch;
  }
  .top-row {
    display: grid;
    grid-template-columns: auto auto;
    place-items: center;
    justify-content: space-between;
    gap: 0;
    margin: 0 auto;
    padding: 0 auto;
  }
  .legal {
    font-size: 14px;
    font-weight: 700;
  }
  .bottom-row {
    font-size: 14px;
    margin: 0 auto 1em auto;
    padding: 0 auto;
    font-weight: 700;
  }
  .mit {
    margin-left: 2em;
  }
  .privacy {
    font-size: 14px;
    font-weight: 700;
    margin: -0.5em auto 0 auto;
  }
  .nav {
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    margin: 0 auto;
    padding: 0 auto;
    gap: 0.5em;
  }
  .nav a:hover {
    filter: var(--ext);
  }
  svg {
    filter: var(--svg);
    border-radius: 0;
  }
  @media screen and (min-width: 200px) and (max-width: 667px) {
    footer {
      display: grid;
      place-items: center;
      grid-template-columns: 1fr;
      grid-template-rows: auto auto auto auto;
    }
    .legal {
      grid-row: 2;
      margin: 0 auto 0.5em auto;
    }
    .nav {
      grid-row: 1;
      margin: 0 auto 0.5em auto;
      gap: 1em;
    }
    .bottom-row {
      grid-row: 3;
      margin: 0 auto;
      margin: 0 auto 0.5em auto;
    }
    .privacy {
      grid-row: 4;
      margin: 0 auto 0.5em auto;
    }
  }
</style>

<footer>
  <div class="top-row">
    <div class="legal">
      &copy; 2021 - {today.getFullYear()} Ariel Diaz. <span class="right">All rights reserved.</span>
    </div>
    </div>
    <div class="nav">
      <a href="https://us.umami.is/share/5MdOgBcRzVP6FU0x/fullmetalbrackets.com" target="_blank" data-umami-event="footer-umami">
        <Umami height={25} width={25} />
      </a>
      <a href="/rss.xml" target="_blank" data-umami-event="footer-rss">
        <Feed height={20} width={20} />
      </a>
      <a href="mailto:contact@fullmetalbrackets.com" target="_blank" data-umami-event="footer-mail">
        <Email height={28} width={28} class="email" />
      </a>
      <a href="https://social.lol/@adiaz" target="_blank" data-umami-event="footer-social">
        <Mastodon height={25} width={25} />
      </a>
      <a href="https://bsky.app/profile/fullmetalbrackets.com" target="_blank" data-umami-event="footer-bsky">
        <Bluesky height={25} width={25} />
      </a>
      <a href="https://github.com/fullmetalbrackets" target="_blank" data-umami-event="footer-github">
        <GitHub height={25} width={25} />
      </a>
      <a href="https://buymeacoffee.com/arieldiaz" target="_blank" data-umami-event="footer-coffee">
        <BuyMeCoffee height={25} width={25} />
      </a>
    </div>
  </div>
  <div class="bottom-row">
      <span>Content: <a href="https://creativecommons.org/licenses/by-nc-sa/4.0/" target="_blank" data-umami-event="footer-cc-by-nc-sa-4.0">CC BY-NC-SA 4.0</a></span> <span class="mit">Code: <a href="https://mit-license.org" target="_blank" data-umami-event="footer-mit-license">MIT</a></span>
  </div>
  <div class="privacy">
    <a href="/privacy" data-umami-event="footer-privacy-policy">Privacy Policy</a>
  </div>
</footer>
