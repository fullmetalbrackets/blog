---
import FormattedDate from "./FormattedDate.astro";
import ReadingTime from "@components/ReadingTime.astro";
import { getCollection, render } from 'astro:content';

const allPosts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
const popularPosts = [
  'plex-remote-access-tailscale', 
  'upgrade-debian-12-bookworm-debian-13-trixie',
  'comprehensive-guide-tailscale-securely-access-home-network',
  'reverse-proxy-using-nginx-adguardhome-cloudflare',
  'how-i-setup-home-server',
];

const filteredPosts = allPosts.filter(post => 
  popularPosts.includes(post.id)
);

const selectedPosts = await Promise.all(
  filteredPosts.map(async (post) => {
    const { remarkPluginFrontmatter } = await render(post);
    return {
      ...post,
      readingTime: remarkPluginFrontmatter.readingTime
    };
  })
);
---

<style scoped>
  section {
    margin: 0 auto;
    padding: 0;
  }
  h2 {
    margin-bottom: 0.3em;
    font-family: var(--sub-font);
    font-weight: 900;
  }
  p {
    margin: 0;
  }
  span {
    line-height: 1.3;
  }
  .info {
    display: flex;
    place-items: center;
    margin: 0;
    padding: 0;
    gap: 0.25em;
  }
  .reading {
    margin: 0;
  }
  .tag {
    display: flex;
    place-items: center;
    margin: 0.25em 0;
  }
  .tag button {
    background: var(--info);
    cursor: pointer;
  }
  button {
    background: var(--info);
    margin-right: 0.325em;
    cursor: pointer;
  }
  button:first-of-type {
    margin-left: 0;
  }
  .desc {
    line-height: 1.4;
  }
  .container {
    background-color: var(--blockquote);
    border-radius: 0.5em;
    margin: 0.5em auto 0 auto;
    padding: 1.5em 1.5em 0.35em 1.5em;
  }
  .list {
    display: inline-flex;
    flex-direction: column;
    margin: 0 auto 1em auto;
    padding-bottom: 0.5em;
    line-height: 1.3;
    border-bottom: 2px solid transparent;
  }
  .list:hover {
    padding-bottom: 0.5em;
    border-bottom: 2px solid var(--hover);
    transition: all .25s ease-out;
  }
  .list:hover .posts-title {
    color: var(--hover);    
    transition: all .25s ease-out;
  }
  .posts-title {
    display: inline-flex;
    flex-direction: row;
    margin: 0 auto;
    font-weight: bold;
    line-height: 1.2;
    color: var(--emphasis);
  }
  @media (hover: hover) {
    a:hover button {
      box-shadow: -4px -4px 0 #000;
      transform: translate(4px, 4px);
    }
    a:hover button {
      outline-offset: 1px;
    }
  }
  @media (hover: none) {
    a:hover button {
      background-color: var(--hover);
    }
  }
  @media screen and (max-width: 667px) {
    main {
      margin: 0 10px;
    }
    ul {
      padding: 1em 0.75em 0.5em 0.75em;
      width: 100%;
      margin: 0;
    }
    .info {
      display: block;
      margin: 0.5em 0 0.25em 0;
    }
    .tag {
      display: block;
      margin: 0.25em 0 0 0;
    }
    .tag button {
      margin: 0.1em 0.25em 0.1em 0;
    }
    .list:hover, .list:hover .posts-title {
      transition: none;
    }
  }
</style>

<section>
<div id="popular" />
  <h2>Popular Posts</h2>
  <div class="container">
    {selectedPosts.map(post => (
        <div class="list">
          <a href={`/blog/${post.id}/`} rel="prefetch-intent" data-umami-event={`popular-${post.id}`}>
            <p class="posts-title">{post.data.title}</p>
            <span class="tag">
              {post.data.tags.map((tag) => (
                <button>{tag}</button>
              ))}
            </span>
            <p class="info">
              <FormattedDate date={post.data.pubDate} />&nbsp;
              <span class="reading"><ReadingTime time={post.readingTime} /></span>
            </p>
          </a>
        </div>

    ))}
  </div>
</section>
