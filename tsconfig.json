{
	"extends": "astro/tsconfigs/base",
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist"],
	"compilerOptions": {
		"strictNullChecks": true,
		"allowJs": true,
		"baseUrl": ".",
		"paths": {
			"@components/*": ["src/components/*"],
			"@layouts/*": ["src/layouts/*"],
			"@styles/*": ["src/styles/*"],
			"@icons/*": ["src/img/icons/*"],
			"@assets/*": ["src/img/assets/*"],
			"@utils/*": ["src/utils/*"],
			"@consts": ["src/consts"]
		}
	}
}
